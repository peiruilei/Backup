/* pages/productDetail/productDetail.wxss */
page{
  background: #FAFAFA;
}

.outer{
  width: 100%;
}

.top-img{
  width: 750rpx;
  height: 750rpx;
}

.productDetail-title{
  width:750rpx;
  height:196rpx;
  background:#FFFFFF;
  opacity:1;
  margin-bottom: 20rpx;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}

.productDetail-name{
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
}

.productDetail-icon{
  width:48rpx;
  height:28rpx;
  background:#FF3C3C;
  opacity:1;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:28rpx;
  text-align: center;
  color:#FFFFFF;
  margin-right: 14rpx;
}

.productDetail-name-text{
  width: 100%;
  height: 100%;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:35rpx;
  color:#333333;
  opacity:1;
}

.productDetail-postage{
  width:100%;
  height:28rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:28rpx;
  color:#666666;
  opacity:1;
  margin-bottom: 10rpx;
}

.productDetail-currentPrice{
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:40rpx;
  color:#FF3C3C;
  opacity:1;
}

.productDetail-originalPrice{
  height:28rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:28rpx;
  color:#999999;
  opacity:1;
  margin-left: 10rpx;
}

.productDetail-content{
  width: 100%;
  background:#FFFFFF;
  opacity:1;
}

.productDetail-navigate{
  width: 100%;
  height: 64rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 2rpx solid #E6E6E6;
}

.productDetail-navigate-item{
  height: 100%;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.productDetail-navigate-text{
  height:100%;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:64rpx;
  color:#999999;
  opacity:1;
}

.verticalLine{
  width:2rpx;
  height:24rpx;
  background:#E6E6E6;
  opacity:1;
}

.checked{
  color:#FF3C3C;
  border-bottom: 4rpx solid #FF3C3C;
}

.productDetail-content-text{
  width: 100%;
  padding: 20rpx 66rpx;
  box-sizing: border-box;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:36rpx;
  color:#666666;
  opacity:1;
}

.bottom-bar{
  width:750rpx;
  height:98rpx;
  background:#FF3C3C;
  opacity:1;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:800;
  line-height:98rpx;
  text-align: center;
  color:#FFFFFF;
  position: fixed;
  bottom: 0;
}

.bottom-gray{
  background:#999999;
}