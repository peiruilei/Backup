/* pages/index/index.wxss */
page{
  background-color: #FAFAFA;
}

.outer{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shipping-address{
  width: 670rpx;
  height: 150rpx;
  margin-top: 30rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  background:#FFFFFF;
  box-shadow:0px 6px 12px rgba(0,0,0,0.03);
  opacity:1;
  border-radius:20rpx;
}

.input-address{
  height: 44rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.image-pencil{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input-text{
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:44rpx;
  color: #333333;
  opacity:1;
}

.address-arrow{
  width: 10rpx;
  height: 19rpx;
  color: #CCCCCC;
  position: absolute;
  right: 0rpx;
}

.address-detail{
  width: 100%;
  height: 100%;
  padding: 26rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.address-content{
  width: 90%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.address-text{
  height: 44rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:44rpx;
  color:#333333;
  opacity:1;
  overflow: hidden;
}

.contactInfo{
  height: 34rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.contact-naem{
  height:34rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:34rpx;
  color:#333333;
  opacity:1;
  margin-right: 40rpx;
}

.contact-phone{
  height:34rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:34rpx;
  color:#333333;
  opacity:1;
}

.order-detail{
  width: 670rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  padding: 26rpx 24rpx 20rpx 36rpx;
  box-sizing: border-box;
  background:#FFFFFF;
  box-shadow:0rpx 6rpx 12rpx rgba(0,0,0,0.05);
  opacity:1;
  border-radius:32rpx;
}

.shop-name{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:40rpx;
  color:#333333;
  opacity:1;
}

.order-dishes{
  width: 100%;
  border-top: 2rpx solid #E6E6E6; 
  border-bottom: 2rpx solid #E6E6E6; 
  padding: 20rpx 0 22rpx 0;
  margin-top: 18rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between; 
}

.order-item{
  height: 128rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.dishImg{
  width: 128rpx;
  height: 128rpx;
  border:2rpx solid #707070;
  opacity:1;
  border-radius:8rpx;
  margin-right: 30rpx;
}

.dish-detail{
  width: 446rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish--name-price{
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.dish-name{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:40rpx;
  color:#333333;
  opacity:1;
}

.dish-price{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:40rpx;
  color:#333333;
  opacity:1;
}

.dish-num{
  height:28rpx;
  font-size:20rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:28rpx;
  color:#999999;
  opacity:1;
}

.other-price{
  height: 190rpx;
  width: 100%;
  border-bottom: 2rpx solid #E6E6E6; 
  padding: 16rpx 0 18rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.other-item{
  height: 44rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.other-item-dot{
  height: 40rpx;
  width: 40rpx;
  background-color: #999999;
  margin-right: 24rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:40rpx;
  color:#FFFFFF;
  opacity:1;
  text-align: center;
}

.other-price-name{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.price-name{
  height:34rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:34rpx;
  color:#333333;
  opacity:1;
}

.item-price{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:40rpx;
  color:#333333;
  opacity:1;
}

.total-price{
  margin-top: 18rpx;
  height:44rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:44rpx;
  color:#333333;
  opacity:1;
  text-align: right;
}

.price-num{
  height:48rpx;
  font-size:34rpx;
  font-family:PingFang SC;
  font-weight:400;
  line-height:48rpx;
  color:#FF3C3C;
  opacity:1;
}

.bottom-menu{
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0rpx;
  background:linear-gradient(225deg,#FF3C3C 0%,#FF7D5A 100%);
  box-shadow:0px -6px 12px rgba(0,0,0,0.03);
  opacity:1;
}

.bottom-icon{
  width: 80rpx;
  height: 84rpx;
}

.bottom-circle{
  width: 128rpx;
  height: 128rpx;
  background:#FFFFFF;
  border-radius:50%;
  opacity:1;
  position: absolute;
  bottom: 16rpx;
  left: 36rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.bottom-price{
  height:56rpx;
  font-size:40rpx;
  font-family:PingFang SC;
  font-weight:800;
  line-height:56rpx;
  color:#FFFFFF;
  opacity:1;
  margin: 22rpx 0rpx 20rpx 180rpx;
}

.payMoney{
  width:204rpx;
  height:98rpx;
  background:#D71E1E;
  opacity:1;
  position: absolute;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.payMoney-text{
  height:44rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:500;
  line-height:44rpx;
  color:#FFFFFF;
  opacity:1;
}

.cover{
  height: 100%;
  width: 100%;
  background:rgba(0,0,0,0.2);
  opacity:1;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.cover-window{
  width:374rpx;
  height:374rpx;
  background:#FFFFFF;
  opacity:1;
  border-radius:52rpx;
  margin-top: 350rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.hook{
  width: 144rpx;
  height: 144rpx;
  margin-bottom: 42rpx;
}

.paySuccess-text{
  height:44rpx;
  font-size:32rpx;
  font-family:PingFang SC;
  font-weight:bold;
  line-height:44rpx;
  color:#3C7DFF;
  opacity:1;
}