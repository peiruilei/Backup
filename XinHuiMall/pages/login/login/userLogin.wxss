page {
  width: 100%;
  height: 100%;
}

.view-page {
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  display: flex;
}

.view-title {
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-conten-box {
  width: 92%;
  height: 990rpx;
  background: white;
  border-radius: 10rpx;
  flex-direction: column;
  display: flex;
  align-items: center;
  box-shadow: 0px 0px 10rpx #f7dbdb;
}

.view-tel-line-box {
  margin-top: 42rpx;
  width: 624rpx;
  height: 115rpx;
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-tel-box {
  width: 624rpx;
  height: 114rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.input-tel {
  width: 480rpx;
  font-size: 32rpx;
  color: #666;
}

.view-line {
  width: 624rpx;
  height: 2rpx;
  background: #f2f2f2;
}

.view-pwd-line-box {
  width: 624rpx;
  height: 115rpx;
  flex-direction: column;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 忘记密码 */

.view-forget-pwd {
  margin-left: 530rpx;
  margin-top: 60rpx;
  margin-right: 0;
  width: 130rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.view-login {
  margin-top: 140rpx;
  width: 566rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #FE7950, #FC4949);
  border-radius: 10rpx;
}

.view-register{
  margin-top: 24rpx;
  width: 566rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  border-radius: 10rpx;
  border-width: 2rpx 2rpx 2rpx 2rpx;
  border-color: #CCCCCC;
  border-style: solid;
}

.view-wechat{
  margin-top: 130rpx;
  width: 120rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.img-wechat{
  width: 105rpx;
  height: 85rpx;
}
