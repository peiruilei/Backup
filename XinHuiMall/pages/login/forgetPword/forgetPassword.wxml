<view class="view-page">
  <!-- 手机号 -->
  <view class="view-tel-line-box">
    <view class="view-tel-box">
      <text class="text-16">手机号</text>
      <input class='input-tel ml15' name="forget_tel" bindinput="forget_tel" type='number' maxlength='11' placeholder='请输入手机号' placeholder-style="color:#CCCCCC;"></input>
    </view>
    <view class="view-line"></view>
  </view>
  <!-- 验证码 -->
  <view class="view-tel-line-box">
    <view class="view-tel-box">
      <view class="view-vif-code-box">
        <text class="text-16">验证码</text>
        <input class='input-vif-code ml15' name="forget_v_code" bindinput="forget_v_code" maxlength="6" type="number" placeholder='请输入验证码' placeholder-style="color:#CCCCCC;"></input>
      </view>

      <view class="view-vif-code" bindtap="getVerifiyCode">
        <text class="text-12" style="color:#fff;">{{v_code}}</text>
      </view>
    </view>
    <view class="view-line"></view>
  </view>
  <!-- 密码 -->
  <view class="view-tel-line-box">
    <view class="view-tel-box">
      <text class="text-16">密码</text>
      <input class='input-tel ml15' name="forget_pwd" bindinput="forget_pwd" maxlength="16" password="true" type="text" placeholder='请输入密码' placeholder-style="color:#CCCCCC;"></input>
    </view>
    <view class="view-line"></view>
  </view>

  <!-- 确认密码 -->
  <view class="view-tel-line-box">
    <view class="view-tel-box">
      <text class="text-16">确认密码</text>
      <input class='input-tel ml15' name="forget_sure_pwd" bindinput="forget_sure_pwd" maxlength="16" password="true" type="text" placeholder='请输入确认密码' placeholder-style="color:#CCCCCC;"></input>
    </view>
    <view class="view-line"></view>
  </view>
  
  <!-- 确认 -->
  <view class="view-register" bindtap="forgetPwdTap">
    <text class="text-17" style="color:#fff;">确认</text>
  </view>

</view>