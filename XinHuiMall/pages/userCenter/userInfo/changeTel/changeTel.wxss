.view{
 width: 100vw;
  height: 100vh;
  background-color:white;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.view-page{
  margin-left: 20rpx;
}


.view_resemble{
  width: 700rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}
/* 通用线条 */
.view_line{
  width: 700rpx;
  height: 3rpx;
  background-color:  rgb(236, 228, 228);
}
.resemble_left_title{
  font-size: 30rpx;
  width: 197rpx;
}

.view-name-input{
  font-size: 26rpx;
  color: #B3B3B3;

}

.view_from_bt{
  margin-top: 400rpx;
  width: 600rpx;
  height: 80rpx;
background:linear-gradient(135deg,rgba(254,121,80,1),rgba(252,73,73,1));
border-radius:8rpx;
  line-height: 80rpx;
  color: white;
 
}
.view_from_bt::after{
  border: none;
}
.view-verification{
  width:170rpx;
height:43rpx;
border:1px solid rgba(252,73,73,1);
border-radius:20px;
text-align: center;
line-height: 43rpx;
color: #FC4949;
font-size: 26rpx;
margin-left: 50rpx;
}


