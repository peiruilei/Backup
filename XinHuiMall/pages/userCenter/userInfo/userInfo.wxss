.view-head-line {
  width: 749rpx;
  height: 1rpx;
  background: rgba(242, 242, 242, 1);
}

.user {
  height: 150rpx;
  /* background-color: rebeccapurple; */
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-head-text {
  color: #808080;
  font-size: 32rpx;
  margin-left: 22rpx;
  font-weight: 400;
}

.user-head-img {
  width: 80rpx;
  height: 80rpx;
  /* background: rgba(255, 51, 0, 1); */
 border-radius: 50%;
}

.user-head-image {
  display: flex;
  align-items: center;
  justify-content: center;
 
}

.user-head-change {
  /* width:50rpx;
height:50rpx; */
