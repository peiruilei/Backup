  align-items: center;
  justify-content: space-between;
}
.user-tel-left{
  margin-left: 22rpx;
  color: #808080;
}
.user-tel-right{
    display: flex;
  align-items: center;
}
.user-tel-right-tel{
  font-weight:400;
  color: #333333;
}
.user-tel-right-btn{
  width:155rpx;
height:50rpx;
margin-right: 23rpx;
