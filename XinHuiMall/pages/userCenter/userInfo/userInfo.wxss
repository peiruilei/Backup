  margin-right: 23rpx;
}

.user-head-slider {
  width: 10rpx;
  height: 17rpx;
}

.view-line {
  height: 2rpx;
  background: rgba(235, 235, 235, 1);
  margin-right: 23rpx;
  margin-left: 22rpx;
}

/* 名字 */

.user-name {
  /* display: flex;
  justify-content: space-between; */
  height: 100rpx;
}

.user-name-content {
  height: 99rpx;
  display: flex;
  justify-content: space-between;
}

.user-name-text-left {
  color: #808080;
  margin-left: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-name-text-right {
  margin-right: 23rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-name-text-right-name {
  margin-right: 20rpx;
}

