/* pages/userCenter/systemMessage/systemMessage.wxss */

page {
  background-color: #fff;
}

.view-head-line {
  height: 1rpx;
  width: 100%;
  background-color: #f2f2f2;
}

/* 列表 */

.view-system {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.content{
  width: 100%;
  /* line-height: 22px; */
  margin-right: 0;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

/* 左侧图片 */

.view-system-image {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 24rpx;
}

.view-system-img {
  width: 80rpx;
  height: 80rpx;
}

/* 右侧文字 */

.view-system-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-right: 34rpx;
  flex: 1;
  margin-left: 38rpx;
}

.view-system-content-up-text {
  font-weight: 400;
  color: #333;
    max-width: 320rpx;
  /* font-size: 28rpx;
  color: #333; */
  overflow: hidden;
  /* 文字溢出用省略号 */
  text-overflow: ellipsis; 
  white-space: nowrap;
}

.view-system-content-up {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-system-content-up-date {
  font-size: 24rpx;
  color: #999;
 
}

.view-system-content-down {
  margin-top: 28rpx;
  color: #666;
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
