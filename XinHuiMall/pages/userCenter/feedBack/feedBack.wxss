/* pages/userCenter/feedBack/feedBack.wxss */
page{
  background-color: #f7f7f7;
  box-sizing: border-box;
}
.view-back-head{
  height: 94rpx;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
background-color: #ffffff;
}
/* 类型 */
.view-back-type-wrap{
  background-color: #ffffff;
}
.view-back-type{
  width: 94%;
  height: 100rpx;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #EBEBEB;
  background-color: #ffffff;
}
/* .view-back-type-line{
  height: 1rpx;
  width: 100%;
} */
.view-back-type-text{
  font-size: 30rpx;
  color: #999999;
}
.view-back-type-img{
  width:30rpx;
height:30rpx;
}
.view-back-explain{
  height: 75rpx;
  display: flex;
  align-items: center;
  font-size:30rpx;
  background-color: #f7f7f7;
}
.text{
  margin-left: 22rpx;
}
/* 详细描述 */
.view-block{
  background-color: #ffffff;

}
.view-block-content {
  /* margin-top: 20rpx; */
    box-sizing:border-box;
  padding: 20rpx;
  width: 100%;
  height: 180rpx;
   background-color: #ffffff;
}
.view-block-foot-img{
width:146rpx;
height:146rpx;
margin-left: 20rpx;
margin-bottom: 20rpx;
border-radius:15rpx;
}
.view-block-img{
  width:146rpx;
height:146rpx;
margin-left: 20rpx;
border:1rpx solid rgba(204,204,204,1);
border-radius:15rpx;
}
.view-block-content-line{
  width: 100%;
  height: 10rpx;
background-color: #F7F7F7
}
/* 手机号 */
.view-block-tel{
  /* width:100%; */
height:115rpx;
display: flex;
align-items: center;
justify-content: space-between;
padding-left: 23rpx;
margin-bottom: 60rpx;
background-color: #ffffff;

}
.view-type-explain{
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666666;
  flex: 1
}

.text-placeholder {
  font-size: 28rpx;
  color: #666666;

}
.view-submit{
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  width:710rpx;
height:80rpx;
background:linear-gradient(135deg,rgba(254,121,80,1),rgba(252,73,73,1));
border-radius:14rpx;
}
.view-submit::after{
  border: none
}
