/* pages/userCenter/applyShops/mapSelectAddress/mapSelectAddress.wxss */

.top {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
  overflow: hidden;
  align-items: center;
  background: rgb(255, 255, 255);
}

.search-box {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;

  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: row;
}

.region {
  width: 200rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #282828;
  text-align: center;
  float: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
} 
.shu {
  width: 1rpx;
  height: 80rpx;
  background: #dbdbdb;
  float: left;
}
.input-search{
  width: 460rpx;
  height: 60rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  border-width: 2rpx 2rpx 2rpx 2rpx;
  border-color: #dbdbdb;
  border-style: solid;
  padding-left: 10rpx;
}
.btn-search{
  width: 100rpx;
  height: 80rpx;
  right: 0rpx;
  color: #ff5000;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search-box .placeholder {
  width: 380rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #ccc;
  padding: 0 20rpx;
  box-sizing: border-box;
  float: left;
}

.add-list-box {
  position: absolute;
  width: 100%;
  height: 20%;
  top: 0;
  z-index: 998;
  padding-top: 150rpx;
  background: #fff;
  box-sizing: border-box;
  overflow: hidden;
}

.add-list {
  width: 100%;
  height: 1000rpx;
}

.add-item {
  line-height: 40rpx;
  padding: 30rpx 50rpx;
  text-align: left;
  border-top: 1px solid #eee;
}

.add-item .title {
  color: #282828;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.add-item .add {
  color: #707070;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.current-site-icon {
  width: 45rpx;
  height: 70rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.near-list {
  height: 650rpx;
  padding-bottom: 100rpx;
  box-sizing: border-box;
}

.near-item {
  line-height: 40rpx;
  padding: 20rpx 20rpx 20rpx 20rpx;
  text-align: left;
  border-bottom: 1px solid #eee;
  position: relative;
}

.current-site {
  font-size: 40rpx;
  color: #ff5000;
  position: absolute;
  top: 40rpx;
  left: 30rpx;
}

.near-item .title {
  color: #282828;
  font-size: 32rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.near-item .add {
  color: #707070;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.near-item .title1 {
  color: #ff5000;
}

.near-item .add1 {
  color: #ff5000;
}

.bottom-box {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 88;
  overflow: hidden;
}

.bottom-box button {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  background: #ff5000;
  color: #fff;
  font-size: 36rpx;
}

.region-box {
  width: 100%;
  height: 100%;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1001;
}

.region-box .region-top {
  position: relative;
  font-size: 40rpx;
  color: #282828;
  font-weight: bold;
  line-height: 100rpx;
  text-align: center;
}

.region-box .region-back {
  width: 80rpx;
  height: 80rpx;
  font-size: 50rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
}

.region-box .region-tabs {
  line-height: 60rpx;
  font-size: 20rpx;
}

.region-tabs .tab {
  min-width: 100rpx;
  max-width: 200rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  color: #ff5000;
  text-align: center;
  border: 1rpx solid #ff5000;
  border-radius: 20rpx;
  display: inline-block;
  margin: 20rpx 0 20rpx 20rpx;
  padding: 3rpx 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.region-list .region-item {
  font-size: 30rpx;
  color: #282828;
  line-height: 80rpx;
  padding: 10rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.map-prompt {
  width: 420rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #707070;
  text-align: center;
  background: #fff;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translate(-50%, 0);
}

.reload {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
}

.reload .center1 {
  width: 30rpx;
  height: 30rpx;
  border: 1rpx solid #ff5000;
  border-radius: 50%;
  margin: 24rpx auto;
}

.reload .center2 {
  width: 25rpx;
  height: 25rpx;
  background: #ff5000;
  border-radius: 50%;
  margin: 3rpx auto;
}
