/* pages/userCenter/applyShops/applyShops.wxss */

page{
  background-color: white;
}

.view-bg {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.view-tips {
  width: 94%;
  display: flex;
  align-items: center;
  background: #fdf1dc;
  color: #f19f3a;
  font-size: 24rpx;
  min-height: 50rpx;
  padding:10rpx 3% 10rpx 3%; 
}

.view-audit-tips {
  width: 30rpx;
  height: 30rpx;
  flex-shrink: 0;
  margin-right: 25rpx;
}

.view-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: white;
  justify-content: space-between;
  margin-bottom: 1rpx;
}

.view-line{
  width: 100%;
  height: 1rpx;
  background-color: #f7f7f7;
}

.view-item-right {
  width: 71%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.input-name {
  width: 90%;
  font-size: 26rpx;
}

.img-arrow {
  width: 10rpx;
  height: 17rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.view-item-detail {
  width: 90%;
  font-size: 26rpx;
}

.view-logo-item{
  width: 100%;
  height: 250rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: row;
}

.img-uploadimg {
  width: 136rpx;
  height: 130rpx;
  margin-top: 40rpx;
}

.text-uploadimg {
  font-size: 26rpx;
  color: #B2B2B2;
  margin-top: 10rpx;
}

.view-logo-right {
  width: 71%;
  display: flex;
  flex-direction: column;
}

/* 协议 */

.view-protocol-box {
  margin-top: 80rpx;
  width: 100%;
  height: 70rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.view-select {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
}

.img-select {
  width: 30rpx;
  height: 30rpx;
}

/* 提交 */

.btn-sumit {
  width: 94%;
  height: 80rpx;
  font-size: 34rpx;
  margin-top: 60rpx;
  color: white;
  margin-bottom: 100rpx;
  background: -webkit-linear-gradient(left,#FE7950,#FC4949);
  display: flex;
  justify-content: center;
  align-items: center;
}