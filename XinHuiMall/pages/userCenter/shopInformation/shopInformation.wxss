page {
  background-color: #fff;
}

.view-page {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.shop-headProfit {
  width: 706rpx;
  height: 201rpx;
  background: linear-gradient(135deg, rgba(254, 121, 80, 1), rgba(252, 73, 73, 1));
  border-radius: 8rpx;
  justify-content: space-around;
  display: flex;
}

.shop-headProfit-left {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fff;
  font-family: Source Han Sans CN;
  font-weight: 400;
}

.shop-headProfit-center {
  display: flex;
  align-items: center;
}

.line {
  width: 1rpx;
  height: 66rpx;
}

.shop-headProfit-right {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: #fff;
}

.shop-headProfit-left-money .shop-headProfit-right-money {
  font-size: 34rpx;
}

.shop-headProfit-left-text .shop-headProfit-right-text {
  font-size: 28rpx;
}

/* 上架 下架 */

.shop-select-upper-item {
  width: 100%;
  height: 72rpx;
  display: flex;
  /* align-items: center; */
  justify-content: space-around;
  /* background-color: pink; */
}

.shop-select {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  width: 404rpx;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  border: 1rpx solid rgba(235, 235, 235, 1);
  border-radius: 36rpx;
}

.shop-select-upper {
  width: 50%;
  /* background: pink; */
  display: flex;
  align-items: center;
  justify-content: center;
  /* border: 1rpx; */
  border-radius: 36rpx 0 0 36rpx;
}

.shop-select-lower {
  width: 50%;
  /* background: red; */
  display: flex;
  align-items: center;
  justify-content: center;
    border-radius: 0 36rpx 36rpx 0;
}

/* 商品列表 */

.shop-list {
  width: 100%;
  /* display: flex; *//* justify-content: space-between; */
}

.shop-list-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.shop-list-item-img {
  /* background-color: red; */
  width: 183rpx;
  height: 183rpx;
  border-radius: 10rpx;
   margin-left: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.shop-list-item-text {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
  margin-left: 21rpx;
}

.shop-list-item-text-name {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
 -webkit-line-clamp: 1;
-webkit-box-orient: vertical;
}

.shop-list-item-text-money {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(255, 51, 0, 1);
}

.shop-list-item-text-help {
  font-size: 26rpx;
  font-family: Source Han Sans CN;
  font-weight: 400;
  color: rgba(255, 153, 0, 1);
}

.shop-list-item-text-point {
  font-size: 26rpx;
  font-weight: 400;
  color: rgba(253, 107, 78, 1);
}

.shop-list-item-sale {
  display: flex;
  align-items: flex-end;
  margin-right: 25rpx;
  font-size: 22rpx;
  color: #b3b3b3;
}

.shop-list-item-line {
  width: 706rpx;
  height: 1rpx;
  display: flex;
  margin-left: 22rpx;
  background: rgba(242, 242, 242, 1);
}
