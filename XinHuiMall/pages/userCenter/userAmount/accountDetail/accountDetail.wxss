/* pages/userCenter/userAmount/accountDetail/accountDetail.wxss */

.view-head-data {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.view-page-data {
  width: 200rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  margin-left: 22rpx;
}

.view-data-text {
  color: #333;
  margin-right: 10rpx;
}

.view-data-select-box {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-data-select {
  width: 20rpx;
  height: 10rpx;
}

.view-head-money {
  margin-bottom: 20rpx;
}

.view-head-money-reserve {
  font-size: #999;
  margin-left: 22rpx;
}

.view-head-money-out {
  margin-left: 46rpx;
  font-size: #999;
}

/* 列表 */

.view-subsidy-item {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin-bottom: 12rpx;
}

.view-subsidy-item-deal-head {
  /* height: 52rpx; */
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.view-subsidy-item-deal-date {
  width: 165rpx;
  height: 52rpx;
  background-size: 100% 100%;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 14rpx;
}

.view-subsidy-item-deal-date-text {
  color: #fff;
}

.view-subsidy-item-deal-date-date {
  color: #999;
  margin-right: 22rpx;
}

.view-subsidy-item-order {
  margin-left: 22rpx;
  margin-bottom: 14rpx;
  color: #666;
}

.view-subsidy-item-goods {
  margin-left: 22rpx;
  margin-right: 22rpx;
  margin-bottom: 14rpx;
  color: #666;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.view-subsidy-item-money {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #fc4949;
  margin-bottom: 30rpx;
}

.view-subsidy-item-money-left {
  margin-left: 22rpx;
}

.view-subsidy-item-money-right {
  margin-right: 22rpx;
}
