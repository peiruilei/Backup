/* pages/orderList/orderList.wxss */
.view{
  width: 100vw;
  min-height: 100vh;
}
/* 顶部订单功能列表 */
.order-scorll-view{
  height: 98rpx;
  width: 750rpx;
  margin: 1rpx 0;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.view-list{
  height: 98rpx;
  width: 1050rpx;
  background-color: #FFFFFF;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.view-item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.view-line-item{
  width:23rpx;
height:3rpx;
margin-top: 9rpx;
}
/* 订单列表 */

.order-list-view{
  width: 750rpx;
  display: flex;
  flex-direction: column;
}
.order-item-view{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 10rpx;
}
.order-item-bar-view{
width: 750rpx;
  height: 76rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #FFFFFF;
}
.order-item-bar-image{
  width:26rpx;
height:25rpx;
margin-left: 22rpx;
margin-right: 12rpx;
}
.order-item-bar-shop-name{
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.order-item--bar-shop-fun{
  font-size: 28rpx;
  color: #FC4949;
  margin-right: 23rpx;
}
.order-detail-view-bg{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #F7F7F7;
}
.order-detail-view{
  width: 706rpx;
  height: 183rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0;
}
.order-detail-image{
  width:183rpx;
height:183rpx;
border-radius:10rpx;
margin-right: 24rpx;
background-color: pink;
}
.order-detail-name-view{
  height: 183rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 1;
}
.order-detail-name{
  max-width: 470rpx;
  font-size: 28rpx;
  color: #333333;
display: -webkit-box;
word-break: break-all;
/*超出文字用省略号代替*/
text-overflow: ellipsis;
/*竖直方向的超出和隐藏*/
-webkit-box-orient: vertical;
/*设定行数为2*/
-webkit-line-clamp: 2;
/*多出部分隐藏*/
overflow: hidden;
}
.order-detail-style{
  width: 470rpx;
  display: flex;
justify-content: flex-start;
align-items: center;
flex-wrap: wrap;
font-size: 26rpx;
color: #CCCCCC;
}
.order-detail-style-first{
  margin-right: 47rpx;
}
.order-detail-price{
  font-size: 26rpx;
  color: #FF3300;
}
.order-detail-num-view{
  height: 183rpx;
  display: flex;
  justify-content: center;
  align-items: flex-start;
}
.order-detail-num{
  font-size: 28rpx;
  color: #999999;
  margin-top: 15rpx;
}
.order-item-bottom-view{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
}
.order-pay-price-view{
  width: 706rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #333333;
}
.order-pay-price-left-text-light{
  color: #FF9900;
}
.order-pay-price-right-text-light{
  font-size: 28rpx;
  color: #FF3300;
  margin-left: 25rpx;
}
.order-date-text-view{
  width: 706rpx;
  height: 87rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999999;
}
.order-date-text{

}
.contact-view{
  /* height: 110rpx; */
  width: 706rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.contact-view-view{
  min-width:102rpx;
height:50rpx;
background:rgba(255,255,255,1);
border:1rpx solid rgba(204,204,204,1);
border-radius:8rpx;
display: flex;
justify-content: center;
align-items: center;
font-size: 26rpx;
color: #999999;
padding:  0 22rpx;
position: relative;
margin: 30rpx 0;
}
.contact-view-view-or{
  width:146rpx;
height:50rpx;
background:rgba(255,255,255,1);
border:1rpx solid rgba(252,73,73,1);
border-radius:8rpx;
display: flex;
justify-content: center;
align-items: center;
font-size: 26rpx;
color: #FC4949;
margin-left: 30rpx;
margin-top: 30rpx;
margin-bottom: 30rpx;
}
.contact-view-text{
}

.view-line{
  width:706rpx;
height:1rpx;
background:rgba(242,242,242,1);
}

.contact-view-bt{
  position: absolute;
  top: 0;
  right: 0;
  width:146rpx;
height:50rpx;
opacity: 0;
}




