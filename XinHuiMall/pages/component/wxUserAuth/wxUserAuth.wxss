
/* 登录 */

.view-login-bg {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(00, 00, 00, 0.2);
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
  flex-direction: column;
}

.view-login-box {
  width: 600rpx;
  height: 740rpx;
  background-size: 100% 100%;
  display: flex;
  background-color: white;
  align-items: center;
  border-radius: 20rpx;
  flex-direction: column;
}

.view-prompt {
  width: 100%;
  height: 100rpx;
  font-size: 34rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.view-prompt1 {
  width: 100%;
  height: 158rpx;
  color: #b2b2b2;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  line-height: 1.6;
  align-items: center;
  text-align: center;
}

.view-line {
  width: 100%;
  height: 2rpx;
  background-color: #ebebeb;
}

.view-login-content {
  width: 418rpx;
  height: 318rpx;
  font-size: 28rpx;
}

.view-login-tel {
  width: 418rpx;
  height: 364rpx;
  font-size: 28rpx;
}

.btn-login {
  border: none;
  background: #40c776;
  width: 400rpx;
  height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 60rpx;
}

.btn-login::after {
  border: none;
}