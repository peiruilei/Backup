/* pages/index/redEnvelopeList/redEnvelopeList.wxss */
.view-cover{
  width: 750rpx;
  padding: 32rpx 22rpx 0 24rpx;
  box-sizing: border-box;
}

.view-header{
  height: 30rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
  margin-bottom: 31rpx;
}

.text-site{
  font-size: 30rpx;
  color: #4D4D4D;
}

.text-num{
  font-size: 30rpx;
  color: #B3B3B3;
  position: absolute;
  right: 0;
}

.view-arrow{
  display :inline-block;
  position: relative;
  width: 8rpx;
  height: 8rpx;
  margin-left: 40rpx;
}

.view-arrow::after{
  display: inline-block;
  content: " ";
  height: 16rpx;
  width: 16rpx;
  border-width: 0 2rpx 2rpx 0;
  border-color: #666666;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform-origin: center;
  transition: transform .3s;
  position: absolute;
  top: 50%;
  right: 10rpx;
  margin-top: -10rpx;
}

.view-redEnvelope{
  width: 100%;
  height: 246rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img-redEnvelope{
  width: 185rpx;
  height: 185rpx;
  margin-right: 24rpx;
  border-radius:10px;
  background-color: #fafa;
}

.view-redEnvelope-description{
  height: 185rpx;
  width: 490rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.text-redEnvelope-title{
  font-size: 30rpx;
  color: #808080;
  font-family:Source Han Sans CN;
  font-weight:400;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 2; 
}

.text-redEnvelope-description{
  font-size: 30rpx;
  color: #B3B3B3;
  font-family:Source Han Sans CN;
  font-weight:400;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical; 
  -webkit-line-clamp: 1; 
}

.button-redEnvelope{
  width: 208rpx;
  height: 58rpx;
  font-size: 28rpx;
  line-height: 58rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:rgba(255,255,255,1);
  background-size:208rpx 58rpx;
  background-repeat:no-repeat; 
  text-align: center;
}