/* pages/index/selectCity/selectCity.wxss */
page{
  background-color: #f7f7f7;
}

.view-bg {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.scroll-view {
  width: 100%;
  height: 100%;
}

.view-loction-city {
  width: 100%;
  height: 116rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  background-color: white;
  font-size: 30rpx;
  color: #808080;
}

.view-city {
  height: 52rpx;
  background:-webkit-linear-gradient(left,#FE7950,#FC4949);
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  border-radius: 26rpx;
}

.text-city {
  font-size: 30rpx;
  color: white;
  margin-left: 36rpx;
  margin-right: 36rpx;
}

.view-section {
  width: 100%;
  height: 50rpx;
  font-size: 32rpx;
  color: #808080;
  display: flex;
  align-items: center;
}

.view-table-view-cell {
  width: 100%;
  height: 92rpx;
  display: flex;
  align-items: center;
  background-color: white;
  margin-bottom: 2rpx;
}

.city-py {
  width: 50rpx;
  position: fixed;
  top: 100rpx;
  right: 0rpx;
  font-size: 22rpx;
  color: #FC4A49;
}