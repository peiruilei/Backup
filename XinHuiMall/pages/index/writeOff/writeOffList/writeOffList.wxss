page {
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}

.view-page {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
  align-items: center;
}

/* 顶部 */

.view-top {
  width: 100%;
  height: 107rpx;
  display: flex;
  flex-direction: row;
  background: #f7f7f7;
  align-items: center;
  position: fixed;
  justify-content: center;
}

.view-switch-button {
  width: 345rpx;
  height: 56rpx;
  display: flex;
  border: 1rpx solid rgba(252, 73, 73, 1);
  border-radius: 28rpx;
}

.view-switch-button-left {
  width: 187rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fc4949;
  border-radius: 27rpx;
  border: none;
}

.view-switch-button-right {
  width: 153rpx;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 28rpx 28rpx 0;
}

/* 核销订单列表 */

.view-order-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
  align-items: center;
  padding-top: 107rpx;
  padding-bottom: 100rpx;
}

.view-order-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
  align-items: center;
}

.view-order-top {
  width: 100%;
  height: 85rpx;
  display: flex;
  align-items: center;
}

.view-top-time {
  width: 340rpx;
  height: 57rpx;
  border-top-right-radius: 28.5rpx;
  border-bottom-right-radius: 28.5rpx;
  display: flex;
  align-items: center;
  background: linear-gradient(to right, #fe7950, #fc4949);
}

.view-order-content-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
}

.view-order-name {
  margin-top: 28rpx;
  width: 100%;
  height: 27rpx;
  display: flex;
  align-items: center;
}

.view-order-sn {
  margin-top: 30rpx;
  width: 100%;
  height: 27rpx;
  display: flex;
  align-items: center;
}

.view-order-goods-box {
  width: 100%;
  height: 243rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.view-goods-table {
  margin-top: 30rpx;
  width: 100%;
  height: 183rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.view-order-line {
  margin-top: 29.9rpx;
  width: 706rpx;
  height: 2rpx;
  background: #f7f7f7;
}

.img-order-goods {
  margin-left: 22rpx;
  width: 183rpx;
  height: 183rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
}

.view-order-goods-content {
  margin-left: 22rpx;
  width: 501rpx;
  height: 183rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}

.view-order-goods-name {
  width: 501rpx;
  display: flex;
  font-size: 28rpx;
  color: #333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

.view-order-goods-desc {
  margin-top: 20rpx;
  width: 501rpx;
  display: flex;
  font-size: 24rpx;
  color: #ccc;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}

.view-order-goods-price-sale {
  bottom: 0rpx;
  position: absolute;
  width: 501rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.view-pay-type-amount {
  width: 706rpx;
  height: 97rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 券包核销列表 */

.view-coupon-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
  align-items: center;
  padding-top: 107rpx;
  padding-bottom: 100rpx;
}

.view-coupon-box {
  width: 100%;
  height: 295rpx;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
  align-items: center;
}

.view-line {
  width: 100%;
  height: 12rpx;
  background: #f7f7f7;
}

.view-coupon-table {
  width: 100%;
  height: 283rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  align-items: center;
}

.view-coupon-name {
  width: 100%;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.view-coupon-content {
  width: 100%;
  height: 183rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
}

.img-coupon-head {
  margin-left: 22rpx;
  width: 183rpx;
  height: 183rpx;
  background: #f7f7f7;
  border-radius: 10rpx;
}

.view-coupon-right {
  margin-left: 22rpx;
  width: 501rpx;
  height: 183rpx;
  display: flex;
  flex-direction: column;
}

.text-coupon-name {
  font-size: 28rpx;
  color: #333;
  height: 61rpx;
  display: flex;
  align-items: center;
}

.text-coupon-content {
  font-size: 24rpx;
  color: #666;
  height: 61rpx;
  display: flex;
  align-items: center;
}

.img-coupon-state {
  margin-top: 0;
  right: 0;
  width: 138rpx;
  height: 133rpx;
  position: absolute;
}

/* 底部操作 */

.view-bottom {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  background: white;
  position: fixed;
  bottom: 0;
}

.view-botton-line{
  width: 100%;
  height: 2rpx;
  background: #f7f7f7;
}

.view-bottom-scan {
  margin-top: 9rpx;
  width: 706rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(to right, #FE7950, #FC4949);
  border-radius: 10rpx;
}