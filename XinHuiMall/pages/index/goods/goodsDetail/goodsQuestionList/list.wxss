/* pages/index/goods/goodsDetail/goodsQuestionList/list.wxss */

.view-bg {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 100rpx;
}

.view-qustion-cell {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-bottom: 2rpx;
}

.view-qustion {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 32rpx;
  margin-bottom: 24rpx;
}

.text-qustion {
  font-size: 22rpx;
  color: #333;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.view-left {
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.view-qustion-bg {
  width: 30rpx;
  height: 30rpx;
  background-color: #fc4949;
  font-size: 22rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.text-time {
  color: #b3b3b3;
  font-size: 22rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

/* 答案 */
.view-answer {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 36rpx;
}

.view-answer-bg {
  width: 30rpx;
  height: 30rpx;
  background-color: #FF9900;
  font-size: 22rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.text-answer {
  color: #666666;
  font-size: 22rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}


.view-ask-question {
  width: 100%;
  height: 100rpx;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0;
}

.btn-ask-question {
  width: 94%;
  height: 80rpx;
  background: -webkit-radial-gradient(left,#FE7950,#FC4949);
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 34rpx;
}



/* 弹出提问 */
.view-show-bg {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  background: rgba(00, 00, 00, 0.2);
  z-index: 1000;
  position: fixed;
  top: 0;
  flex-direction: column;
}

.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.view-textarea-view {
  width: 100%;
  height: 372rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.text-describe {
  font-size: 30rpx;
  color: #808080;
  margin-top: 26rpx;
  margin-left: 26rpx;
}

.view-textarea-bg {
  width: 94.4%;
  height: 152rpx;
  background-color: #F7F7F7;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 18rpx;
  margin-left: 22rpx;
}

.text-input-block {
  height: 108rpx;
  width: 94%;
  font-size: 24rpx;
  color: #B3B3B3;
}

.view-submit {
  width: 94%;
  margin-left: 3%;
  height: 80rpx;
  background:-webkit-linear-gradient(left,#FE7950,#FC4949);
  color: white;
  font-size: 34rpx;
  margin-top: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx;
}