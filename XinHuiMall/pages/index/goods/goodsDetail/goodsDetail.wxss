}

.view-addOrReduce {
  height: 80rpx;
  width: 80rpx;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img-addOrReduce {
  width: 28rpx;
  height: 28rpx;
}

.view-specification-button {
  width: 100%;
  height: 80rpx;
