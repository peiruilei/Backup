  margin-left: 20rpx;
  margin-top: 20rpx;
}

.text-specification-value-select {
  padding: 5rpx 30rpx 5rpx 30rpx;
  background-color: #ef8e37;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

/*购买数量*/

.view-buy-num {
  width: 94%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  justify-content: space-between;
  padding: 20rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
}

.view-symbol {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
