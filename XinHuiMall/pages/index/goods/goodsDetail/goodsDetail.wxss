/* pages/index/goods/goodsDetail/goodsDetail.wxss */
@import "../../../../wxParse/wxParse.wxss";

page {
  background-color: #f7f7f7;
}

.view-bg {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 98rpx;
}

.view-swiper-top {
  width: 100%;
  height: 375rpx;
}

.view-top {
  width: 100%;
  height: 375rpx;
}

.img-swiper-top {
  width: 100%;
  height: 375rpx;
}

.img-deafult {
  width: 100%;
  height: 375rpx;
}

/* 商品信息 */

.view-name-price {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
}

.text-goods-name {
  font-size: 28rpx;
  color: #323232;
  margin-top: 16rpx;
}

.text-detail {
  font-size: 22rpx;
  color: #ccc;
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 16rpx;
}

/* 价钱 */

.view-price {
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.view-price-item {
  width: 33%;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.text-price {
  font-size: 26rpx;
}

.text-money {
  font-size: 22rpx;
}

.text-stock {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 10rpx;
}

.view-item {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
  background-color: white;
}

.view-item-left {
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.img-seven-day-return {
  width: 24rpx;
  height: 26rpx;
}

.text-seven-day-return {
  color: #808080;
  font-size: 24rpx;
}

.view-item-right {
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.img-arrow {
  width: 10rpx;
  height: 17rpx;
}

/* 店铺信息 */

.view-store {
  width: 100%;
  height: 224rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10rpx;
}

.img-store {
  width: 184rpx;
  height: 184rpx;
  border-radius: 10rpx;
  background-color: #f7f7f7;
  margin-left: 20rpx;
}

.view-store-content {
  width: 68%;
  height: 184rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.text-store-name {
  font-size: 28rpx;
  margin-top: 16rpx;
}

.view-distance {
  width: 100%;
  height: 64rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  font-size: 28rpx;
  color: #ccc;
}

/* 导航 */

.view-nav {
  height: 64rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #fc4949;
}

.image-nav {
  margin-left: 20rpx;
  margin-right: 20rpx;
  width: 25rpx;
  height: 25rpx;
  flex-shrink: 0;
}

/* <!-- 商品介绍 评论/提问 --> */

.view-menu {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: white;
  position: relative;
}

.view-menu-item {
  width: 50%;
  height: 80rpx;
  font-size: 28rpx;
  color: #b3b3b3;
  display: flex;
  justify-content: center;
  align-items: center;
}

.view-menu-item.active {
  color: #fc4949;
}

.view-menu-line {
  width: 106rpx;
  height: 4rpx;
  background-color: #fc4949;
  position: absolute;
  bottom: 0;
}

.view-detail {
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
}

/* //评论 */

.view-detail-section {
  width: 100%;
  height: 92rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #808080;
  background-color: white;
}

.view-section-left {
  font-size: 28rpx;
  color: #808080;
  margin-left: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.view-section-right {
  font-size: 24rpx;
  color: #808080;
  display: flex;
  align-items: center;
  flex-direction: row;
  margin-right: 20rpx;
}

.view-commen-cell {
  width: 100%;
  display: flex;
  flex-direction: column;
}

/* 用户 */

.view-commen-user {
  width: 100%;
  height: 92rpx;
  display: flex;
  align-items: center;
}

.img-user-head {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  background-color: #f7f7f7;
  flex-shrink: 0;
}

.view-user-content {
  width: 83%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.view-name-score {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.text-user-name {
  font-size: 24rpx;
  color: #666;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.img-star {
  width: 23rpx;
  height: 22rpx;
  flex-shrink: 0;
  margin-left: 5rpx;
  margin-right: 5rpx;
}

.text-commen-time {
  font-size: 24rpx;
  color: #ccc;
}

.text-commen-content {
  margin-left: 100rpx;
  margin-right: 20rpx;
  font-size: 22rpx;
  color: #666;
  margin-top: 16rpx;
  margin-bottom: 30rpx;
}

/* 提问 */

.view-qustion-cell {
  width: 100%;
  height: 74rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.view-question {
  width: 30rpx;
  height: 30rpx;
  background-color: #fc4949;
  font-size: 22rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  flex-shrink: 0;
}

.text-question {
  font-size: 22rpx;
  color: #666;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 其他商品推荐 */

.view-collectionview {
  width: 738rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  background-color: white;
}

.view-section-bg {
  width: 224rpx;
  height: 54rpx;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  background-size: 100% 100%;
  color: white;
  font-size: 26rpx;
}

.view-collectionview-cell {
  width: 346rpx;
  height: 396rpx;
  margin-left: 16rpx;
  display: flex;
  flex-direction: column;
}

.img-collection-goods {
  width: 100%;
  height: 174rpx;
  border-radius: 12rpx;
  background-color: #f7f7f7;
}

.view-goods-content {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.view-goods-left {
  width: 220rpx;
  font-size: 26rpx;
}

.view-goods-right {
  width: 126rpx;
  font-size: 24rpx;
  color: #ccc;
}

.text-money {
  font-size: 20rpx;
  color: #f30;
}

/* 底部按钮 */

.view-bottom {
  width: 100%;
  height: 98rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
}

.btn-collect-share {
  border: none;
  width: 128rpx;
  height: 98rpx;
  background-color: white;
  font-size: 22rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 24rpx;
}

.img-icon {
  width: 42rpx;
  height: 42rpx;
  flex-shrink: 0;
  margin-bottom: 10rpx;
}

.btn-collect-share::after {
  border: none;
}

.view-addShopCar-order {
  width: 460rpx;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  margin-right: 20rpx;
  border-radius: 40rpx;
}

.view-bottom-addShopCar {
  width: 50%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fe7950;
  color: white;
  font-size: 30rpx;
}

.view-bottom-addOrder {
  width: 50%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fc4949;
  color: white;
  font-size: 30rpx;
}



/*规格弹出*/

.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.view-specification {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 99;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
}

.view-specification-mask {
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.4;
  position: absolute;
  z-index: 1;
}

.view-specification-bottom {
  width: 100%;
  height: 920rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  z-index: 10;
  bottom: 0rpx;
}

.view-specification-goods-info {
  width: 94%;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.img-specification-goods {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}

.view-price-stock-size {
  width: 71%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.view-price-points {
  width: 96%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.view-stock-size {
  width: 96%;
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.view-wrong {
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #a5a5a5;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-content: center;
  color: #a5a5a5;
  font-size: 24rpx;
}

/*规格列表*/



.view-specification-list {
  width: 100%;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}

.view-specification-value-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.text-specification-value {
  padding: 5rpx 30rpx 5rpx 30rpx;
  background-color: #ebebeb;
  border-radius: 40rpx;
