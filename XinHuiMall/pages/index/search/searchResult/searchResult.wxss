/* pages/index/search/searchResult/searchResult.wxss */

page {
  background-color: white;
}

.view-bg {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.view-search {
  width: 94%;
  background-color: #f7f7f7;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  margin-left: 3%;
  border-radius: 10rpx;
  margin-top: 32rpx;
}

.img-search {
  width: 30rpx;
  height: 30rpx;
  display: flex;
  margin-left: 30rpx;
}

.view-input {
  width: 75%;
  /* height: 80rpx; */
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #b3b3b3;
}

.btn-search {
  width: 20%;
  height: 80rpx;
  font-size: 28rpx;
  display: flex;
  color: #808080;
  justify-content: center;
  align-items: center;
  border: none;
  margin-right: 0;
}

.view-result {
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

/* 搜索结果 */

.view-search-result {
  width: 100%;
  height: 68rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  position: relative;
}

.view-search-bg {
  width: 150rpx;
  height: 16rpx;
  background: rgba(252, 73, 73, 1);
  opacity: 0.2;
}

.text-search-result {
  font-size: 30rpx;
  color: #333333;
  position: absolute;
  bottom: 0;
}

/* 搜索结果列表 */
.view-table-view{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.view-table-view-cell {
  width: 100%;
  height: 280rpx;
  display: flex;
  align-items: center;
}

.img-goods {
  width: 220rpx;
  height: 220rpx;
  background-color: #f7f7f7;
  border-radius: 10rpx;
  margin-left: 22rpx;
}

.view-cell-content {
  width: 61%;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  margin-left: 24rpx;
}

.view-content{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.text-left {
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text-right {
  flex-shrink: 0;
}

.view-line {
  width: 100%;
  height: 2rpx;
  background-color: #F2F2F2;
}