page{
  background-color: white;
}

.view-bg {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.view-search {
  width: 94%;
  background-color: #F7F7F7;
  height: 80rpx;
   display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  margin-left: 3%;
  border-radius: 10rpx;
  margin-top: 32rpx; 
}

.img-search {
  width: 30rpx;
  height: 30rpx;
  display: flex;
  margin-left: 30rpx;
}

.view-input {
  width: 75%;
  /* height: 80rpx; */
  margin-left: 20rpx;
  font-size: 28rpx;
}

.btn-search {
  width: 20%;
  height: 80rpx;
  font-size: 28rpx;
  display: flex;
  color: #808080;
  justify-content: center;
  align-items: center;
  border: none;
  margin-right: 0;
}

.btn-search::after {
  border: none;
}

/* 历史记录 */

.view-search-record {
  width: 94%;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  margin-left: 3%;
}

.view-historical-top {
  height: 92rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

.view-historical-top text {
  font-size: 30rpx;
}

.btn-delet {
  border: none;
  width: 80rpx;
  height: 80rpx;
  margin-right: 0rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.btn-delet::after {
  border: none;
}

.img-delet {
  width: 24rpx;
  height: 25rpx;
}

.view-historical {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}

.view-historical-list {
  border-radius: 23rpx;
  height: 46rpx;
  background-color: #f7f7f7;
  display: flex;
  align-items: center;
  max-width: 100%;
  margin-right: 30rpx;
  margin-bottom: 24rpx;
}

.text-value {
  color: #4D4D4D;
  font-size: 26rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
