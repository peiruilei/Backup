/* pages/userCenter/customerServiceCenter/customerServiceCenter.wxss */

page {
  background-color: white;
}

.view-bg {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.btn-contact-customerService {
  width: 80%;
  margin-top: 200rpx;
  height: 160rpx;
  background-color: #68D6AB;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  border: none;
  border-radius: 16rpx;
}

.btn-contact-customerService::after
{
  border: none;
} 

.img-customer-service {
  width: 42rpx;
  height: 42rpx;
}

.text-content {
  font-size: 32rpx;
  color: white;
}

.btn-contact-tel{
  width: 80%;
  margin-top: 100rpx;
  height: 160rpx;
  background-color: #FFC470;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  border: none;
  border-radius: 16rpx;
}

.btn-contact-tel::after
{
  border: none;
}


/* 选择电话 */
.view-show-bg{
   width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(00, 00, 00, 0.2);
  z-index: 1000;
  position: fixed;
  top: 0;
  flex-direction: column;
}

.view-contact-tel-bg {
  width: 92%;
  border-radius: 20rpx;
  background-color: white;
}

.view-contact-tel-section {
  width: 100%;
  height: 100rpx;
  background-color:#fafafa;
  font-size: 32rpx;
  color: #323232;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.view-scroll-view {
  width: 100%;
  max-height: 500rpx;
  display: flex;
}

.view-tel-cell{
  width: 100%;
  height: 99rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #323232;
  font-size: 30rpx;
}

.view-line{
  width: 100%;
  height: 1rpx;
  background-color:#ebebeb;
}