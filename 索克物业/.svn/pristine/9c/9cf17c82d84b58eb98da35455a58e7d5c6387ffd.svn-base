page {
  background: #fafafa;
}

.view-page {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background: #fafafa;
}

/* 两种线 */

.line {
  width: 100%;
  height: 2rpx;
  background: #fafafa;
}

.line-view {
  width: 100%;
  height: 10rpx;
  background: #fafafa;
}

/* 地图 */

.view-map {
  width: 100%;
  height: 450rpx;
  display: flex;
}

.map {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view-map-bottom {
  bottom: 0rpx;
  width: 100%;
  height: 30rpx;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  background: #fff;
  position: absolute;
}

/* 进行中的订单状态 */

.view-state-processing-box {
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
}

/* 维修师傅 */

.view-master-box {
  width: 100%;
  height: 170rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  justify-content: space-between;
}

.img-master-header {
  margin-left: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: #fafafa;
  border-radius: 50rpx;
}

.view-name-tel-box {
  margin-right: 30rpx;
  width: 560rpx;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
  justify-content: center;
}

/* 任务 */

.view-task-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
  justify-content: center;
}

.view-task-type {
  width: 100%;
  height: 88rpx;
  align-items: center;
  display: flex;
  flex-direction: row;
}

.view-task-desc {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.view-task-gallery {
  width: 100%;
  height: 278rpx;
  display: flex;
  flex-direction: column;
}

.image-group {
  width: 96%;
  display: flex;
  white-space: nowrap;
  padding-left: 4%;
}

.image-group image {
  display: inline-block;
  width: 160rpx;
  height: 160rpx;
  margin-right: 30rpx;
  background: #fafafa;
  border-radius: 10rpx;
}
