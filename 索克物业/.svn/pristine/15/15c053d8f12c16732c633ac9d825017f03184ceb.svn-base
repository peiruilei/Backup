/* pages/userCenter/userInfo/userInfo.wxss */

page {
  background-color: white;
}

.view-bg {
  width: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.view-head-item {
  width: 100%;
  height: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.view-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.img-user-head {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
  background-color: #f7f7f7;
  margin-right: 28rpx;
}

.text-nick-name {
  margin-left: 20rpx;
  margin-right: 28rpx;
  font-size: 28rpx;
  color: #909090;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.view-right {
  display: flex;
  align-items: center;
  justify-content: center;
}

.text-tel-num {
  margin-right: 28rpx;
  font-size: 28rpx;
  color: #909090;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.img-arrow {
  width: 12rpx;
  height: 22rpx;
  margin-right: 24rpx;
}

.view-line {
  width: 94%;
  height: 1rpx;
  background-color: #ebebeb;
}
