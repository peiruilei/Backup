/* pages/userCenter/userCenter.wxss */

page{
  background-color: white;
}

.view-bg {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

/* 用户信息 */
.view-top {
  margin-top: 20rpx;
  width: 92%;
  height: 200rpx;
  background-color: white;
  border-radius: 16rpx;
  -moz-box-shadow:0px 0px 1px #E5E5E5;
   -webkit-box-shadow:0px 0px 1px #E5E5E5;
    box-shadow:0px 0px 1px #E5E5E5;
    display: flex;
    align-items: center;
}

.img-head {
  height: 122rpx;
  width: 122rpx;
  border-radius: 50%;
  background-color: #f7f7f7;
  margin-left: 40rpx;
  flex-shrink: 0;
}
.view-content {
  width: 70%;
  height: 200rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.text-name {
  font-size: 32rpx;
  line-height: 32rpx;
  margin-top: 52rpx;
  color: #323232;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.text-account-id
{
  font-size: 26rpx;
  color: #B2B2B2;
  margin-top: 42rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* 下面的类别 */

.view-table-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.view-table-view-cell {
  width: 100%;
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.view-left
{
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.img-icon {
  width: 44rpx;
  height: 44rpx;
  margin-left: 20rpx;
}

.view-right
{
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.img-arrow {
  width: 12rpx;
  height: 22rpx;
  margin-right: 30rpx;
}

.view-line {
  width: 94%;
  height: 1rpx;
  background-color: #ebebeb;
}