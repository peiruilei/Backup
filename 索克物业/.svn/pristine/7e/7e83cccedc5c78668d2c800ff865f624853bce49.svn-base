.view-bg,page
{
  background: #fff;
}

.view-address-box {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}

.img-address {
  width: 28rpx;
  height: 28rpx;
}

.text-address {
  color: #323232;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.img-arrow {
  width: 10rpx;
  height: 18rpx;
  margin-left: 10rpx;
}
/* 滚动栏 */

.view-index-top {
  width: 100%;
  height: 450rpx;
  background-color: white;
}

.swiper-item {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img-top-ad {
  width: 100%;
  height: 414rpx;
  border-radius:10rpx;  
}

.view-top {
  width: 690rpx;
  height: 414rpx;
  margin-left:30rpx;
  border-radius:10rpx;  
}


/* 通知 */

.view-notice-box {
  width: 88%;
  margin-left: 4%;
  height: 90rpx;
  box-shadow: 0rpx 0rpx 7rpx 0rpx rgba(204, 204, 204, 0.35);
  border-radius: 10rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-right: 2%;
  padding-left: 2%;
}

.img-notice-icon {
  width: 123rpx;
  height: 29rpx;
}

.swiper-announcement {
  display: flex;
  flex-grow: 1;
  margin-left: 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  align-items: center;
}

.text-announcement-content {
  width: 100%;
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(50, 50, 50, 1);
  height: 90rpx;
  line-height: 90rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
/* 任务 */
.view-task-box
{
  width: 92%;
  height: 160rpx;
  background: #f7f7f7;
  border-radius:10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 4%;
  margin-top: 30rpx;
}
.img-task-icon
{
  width: 44rpx;
  height: 44rpx;
  flex-shrink: 0;
}
.text-task-name
{
  font-size:34rpx;
font-weight:bold;
color:323232;
margin-left: 30rpx;
}
