/* components/liveCooperation/liveCooperation.wxss */
/* 页面背景 */
.view-outer{
  width: 750rpx;
  height: 1206rpx;
  background-size: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
/* 页面内部内容 */
.view-container{
  width: 726rpx;
  height: 1074rpx;
  background-size: 100%;
  padding: 76rpx 83rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
/* 标题 */
.view-container-title{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.text-container-title{
  font-size:46rpx;
  font-family:Source Han Sans CN;
  font-weight:bold;
  font-style:italic;
  color:rgba(248,105,88,1);
  z-index: 90;
}

.view-container-line{
  width:237rpx;
  height:15rpx;
  background:rgba(255,198,191,1);
  position: relative;
  top: -12rpx;
}
/* 表单 */
.view-container-form{
  width: 100%;
  height: 420rpx;
  display: flex;
  flex-direction: column;
}

.view-form-item{
  width: 100%;
  height: 60rpx;
  margin-top: 45rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.view-form-img{
  width: 44rpx;
  height: 44rpx;
  background-size: 100%; 
}

.view-input-line{
  width: 470rpx;
  height: 60rpx;
  border-bottom: 2rpx solid rgba(238,238,238,1); 
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 27rpx;
}

.input-form{
  width: 400rpx;
}

.input-form-code{
  width: 300rpx;
}

.placeholder{
  font-size:26rpx;
  font-family:Source Han Sans CN;
  font-weight:bold;
  color:rgba(181,181,181,1);
}

.view-form-code{
  height:25rpx;
  font-size:25rpx;
  line-height: 25rpx;
  font-family:Source Han Sans CN;
  font-weight:bold;
  color:#F86958;
  border-left:1rpx solid red; 
  padding-left: 13rpx;
}

.view-container-button{
  width:322rpx;
  height:84rpx;
  background:#F86958;
  border-radius:42rpx;
  font-size:30rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  line-height: 84rpx;
  text-align: center;
  color:#FFFEFE;
  margin-top: 54rpx;
}

.view-container-contact{
  width: 100%;
  height: 22rpx;
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.view-contact{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.view-contact-seat{
  width: 60rpx;
  height: 200rpx;
}

.view-contact-text1{
  font-size:26rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:#151515;
  text-align: center;
}

.view-contact-text2{
  font-size:24rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:#B5B5B5;
  text-align: center;
}

.view-contact-image1{
  background-size:100%;
  width: 104rpx;
  height: 104rpx;
}

.view-contact-image2{
  background-size:100%;
  width: 140rpx;
  height: 140rpx;
}

.view-contact-view{
  height: 150rpx;
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}