/* pages/TarBar/tarbar.wxss */
.bottom-bar{
  width: 750rpx;
  height: 98rpx;
  background:rgba(255,255,255,1);
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.view-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.view-image1{
  width: 50rpx;
  height: 50rpx;
  background-size:100%; 
}

.view-image2{
  width: 120rpx;
  height: 120rpx;
  background-size:100%; 
  position: absolute;
  bottom: 30rpx;
}

.view-text{
  font-size:24rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:rgba(91,91,91,1);
}

.active .view-text{
  color: red;
}