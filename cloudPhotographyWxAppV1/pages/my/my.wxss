/* pages/index/ours/ours.wxss */
page{
  background-color: #f7f7f7;
}

.view-header{
  width: 750rpx;
  height: 312rpx;
  background-color: #FFFFFF;
  box-shadow:0rpx 0rpx 16rpx 0rpx rgba(0, 0, 0, 0.06);
  padding: 62rpx 0 100rpx 30rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

.view-header-container{
  height: 150rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.view-headimg{
  width: 150rpx;
  height: 150rpx;
  background-color: #BFBFBF;
  border-radius: 50%;
  margin-right: 33rpx;
}

.view-header-text1{
  font-size:40rpx;
  font-family:Source Han Sans CN;
  font-weight:500;
  color:#000000;
}

.view-header-text2{
  font-size:26rpx;
  font-family:Source Han Sans CN;
  font-weight:400;
  color:#000000;
}

.view-body{
  width: 100%;
  background-color: #FFFFFF;
}

.view-body-item{
  width: 100%;
  height: 90rpx;
  padding: 24rpx 26rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.view-body-img{
  width: 44rpx;
  height: 44rpx;
  background-size: 100%; 
  margin-right: 24rpx;
}

.view-body-arrow{
  width: 44rpx;
  height: 44rpx;
  background-size: 100%; 
  margin-right: 24rpx;
  position: absolute;
  right: 0;
}

.view-body-title{
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:500;
  color:#151515;
}

.TarBar{
  position: fixed;
  bottom: 0rpx;
}